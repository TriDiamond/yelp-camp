<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center mb-5">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Campground Title"
        />
        <label class="form-label" for="title">Title</label>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Campground Location"
        />
        <label for="location">Location</label>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          placeholder="Campground Image URL"
        />
        <label for="location">Image URL</label>
      </div>
      <div class="form-floating mb-3">
        <input
          id="price"
          type="number"
          class="form-control"
          name="campground[price]"
          placeholder="Price ($)"
        />
        <label for="price">Price ($)</label>
        <div id="emailHelp" class="form-text">Prices are in US Dollars.</div>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Campground Description"
          style="height: 100px"
        ></textarea>
        <label for="location">Description</label>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Submit</button>
        <a href="/campgrounds" class="btn btn-light">Back to list</a>
      </div>
    </form>
  </div>
</div>
