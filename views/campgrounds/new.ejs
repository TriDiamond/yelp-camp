<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center mb-5">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Campground Title"
          required
        />
        <label class="form-label" for="title">Title</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Campground Location"
          required
        />
        <label for="location">Location</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-floating mb-3">
        <input
          id="price"
          type="number"
          class="form-control"
          name="campground[price]"
          placeholder="Price ($)"
          required
        />
        <label for="price">Price ($)</label>
        <div id="emailHelp" class="form-text">Prices are in US Dollars.</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Campground Description"
          style="height: 100px"
          required
        ></textarea>
        <label for="location">Description</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="input-group mb-3">
        <input
          type="file"
          class="form-control"
          id="imageUpload"
          name="image"
          multiple
          placeholder="Choose image(s)"
        />
        <label class="input-group-text" for="imageUpload">
          Choose image(s)
        </label>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Submit</button>
        <a href="/campgrounds" class="btn btn-light">Back to list</a>
      </div>
    </form>
  </div>
</div>
